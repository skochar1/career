{
  "compilerOptions": {
    "target": "ES2020", // Great â€” modern features like optional chaining, nullish coalescing, etc.
    "lib": [
      "DOM",
      "ES2020"
    ], // Includes both browser DOM and modern JS features â€” correct.
    "module": "ESNext", // Good for tree-shaking and modern module resolution.
    "moduleResolution": "node", // Required to resolve modules like "react" or "lucide-react".
    "jsx": "preserve", // Correct for React 17+ (no need to import React explicitly in every file).
    "strict": true, // Enables all strict type-checking options â€” good practice.
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules â€” good.
    "skipLibCheck": true, // Speeds up builds by skipping type checking in node_modules â€” usually fine.
    "forceConsistentCasingInFileNames": true, // Prevents case mismatch issues â€” important for cross-platform dev.
    "noImplicitAny": false // ðŸ‘ˆ Optional â€” disabling this makes TypeScript more forgiving.
    ,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
